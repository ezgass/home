<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    {% for grouped_event in this.grouped_events %}
      <div class="item {{ grouped_event.class }}">
        {% for event in grouped_event.events %}
          <div class="event span5 offset1">
            <h3>{{ event.name }}</h3>
            <b>{{ event.date }}</b>
            <br>

            {% if event.github %}
            <a class="label label-info" href="{{ event.github }}">Medžiaga @ GitHub</a>
            {% endif %}

            <h4>Pranešėjai</h4>
            <ol> 
                {% if event.speakers|length == 0 %}
                Turi ką papasakoti? Rašyk mums!
                {% endif %}

                {% for speaker in event.speakers %}
                <li>
                    <strong>{{ speaker.name }}</strong>
                    {% if speaker.linkedin %}
                    <a href="{{ speaker.linkedin }}" title="{{ speaker.name }}" target="_blank"><img src="media/img/linkedin.png" alt="" /></a>
                    {% endif %}
                    <br>
                    {{ speaker.title }}
                </li>
                {% endfor %}
            </ol>

          </div>
        {% endfor %}
      </div>
    {% endfor %}
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>
</div>